<h1>
	All posts
</h1>

#form_for helper and arguments


<% @posts.reverse_each do |post| %>
	<h2>
		<%= link_to post.title, user_posts_path(@user.id) %>
	</h2>

	<p>
		<%= post.p_content %>
	</p>

	<ul>
		<li>
			<%= post.user.username %>
		</li>
		
		<li>
			<%= post.created_at %>
		</li>
	</ul>
<% end %>