<%= form_tag('/login', method: :post) do %>
	<p>
		<%= label_tag :username %>
		<%= text_field_tag :username %>
	</p>

	<p>
		<%= label_tag :password %>
		<%= password_field_tag :password %>
	</p>

	<p>
		<%= submit_tag :submit %>
	</p>
<% end %>